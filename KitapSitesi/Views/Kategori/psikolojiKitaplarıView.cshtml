
@{
    ViewBag.Title = "Psikoloji Kitapları";
}

@using KitapSitesi.Models;
@model List<Kitaplar>
<div class="col-md-10">
    @* 6'yı 12 yaptık.Tam ekranda göstermek için. Ekranın yarısında göstermek için 6 *@
    <div class="block">
        <div class="block-heading">
            <div class="main-text h2">
                Psikoloji Kategorisi
            </div>
            <div class="block-controls">


                <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>  @*aşağı doğru açılır kapanır.collapse yapar.*@

            </div>
        </div>
        <div class="block-content-outer">
            <div class="block-content-inner">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            @*<th>Resim </th>*@

                            <th>Kitap Adı</th>
                            <th>Satış Fiyatı </th>
                            <th>Yazarı</th>

                   
                            <th>Yayınevi</th>
                            <th>Basım Yılı </th>
                            <th>Eklenme Tarihi </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Where(u => u.KategoriID == 3))
                        {
                            <tr>

                                <td>
                                    <strong>@Html.DisplayFor(modelItem => item.KitapAdi)</strong>
                                </td>
                                <td>
                                    <strong>@Html.DisplayFor(modelItem => item.SatisFiyati)</strong>
                                </td>
                                <td>
                                    <strong>@Html.DisplayFor(modelItem => item.Yazarlar.YazarAdiSoyadi)</strong>
                                </td>

                              
                                <td>
                                    <strong>@Html.DisplayFor(modelItem => item.YayinEvi.YayinEviAdi)</strong>
                                </td>
                                <td>
                                    <strong>@Html.DisplayFor(modelItem => item.BasimYili)</strong>
                                </td>
                                <td>
                                    <strong>@Html.DisplayFor(modelItem => item.EklenmeTarihi)</strong>
                                </td>

                            </tr>

                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

