
@{
    ViewBag.Title = "Kitap Ekle";
}
@using KitapSitesi.Models;
<div class="row">
    <div class="col-md-12 col-sm-12">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    Kitap Ekleme Sayfası
                </div>
                <div class="block-controls">
                    <a href="/KitapIslemleri/Index">
                        <span aria-hidden="true" class="icon icon-cross icon-size-medium block-control-remove"></span>
                    </a>
                    <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                </div>
            </div>
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <form action="/KitapIslemleri/KitapEkle" method="post" role="form">
                        @*   Form, Post için gerekli. Action tanımladık*@
                        <div class="form-group">
                            <label for="exampleInputEmail1">Kitap Adı:</label>
                            <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Kitap adı giriniz" name="KitapAdi">
                        </div>
                        @*<div class="form-group">
                            <label for="exampleInputEmail1">Kategori Adı:</label>
                            <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Kategori adı giriniz" name="Kategoriler.KategoriAdi">
                        </div>*@
                        <div class="form-group">
                            <label for="input-demo-v">Kategori:</label>
                            <select id="input-demo-v" class="form-control" name="KategoriID">
                                @foreach (Kategoriler cat in ViewBag.ctgList)
                                {
                                    <option value="@cat.KategoriID">@cat.KategoriAdi</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Satış Fiyatı:</label>
                            <input type="number" class="form-control" id="exampleInputPassword1" placeholder=" Satış fiyatı giriniz" name="SatisFiyati">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Alış Fiyatı:</label>
                            <input type="number" class="form-control" id="exampleInputPassword1" placeholder=" Alış fiyatı giriniz" name="AlisFiyati">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Yazarı:</label>
                            <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Yazar adı ve soyadı giriniz" name="Yazarlar.YazarAdiSoyadi">
                        </div>

                        <div class="form-group">
                            <label for="exampleInputEmail1">Yayınevi Adı:</label>
                            <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Yayınevi adı giriniz" name="YayinEvi.YayinEviAdi">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Basım Yılı:</label>
                            <input type="date" class="form-control" id="exampleInputEmail1" placeholder="Basım yılı giriniz" name="BasimYili">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Eklenme Tarihi:</label>
                            <input type="date" class="form-control" id="exampleInputEmail1" placeholder="Eklenme tarihi giriniz" name="EklenmeTarihi">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">İndirim Oranı:</label>
                            <input type="number" class="form-control" id="exampleInputEmail1" placeholder="İndirim Oranı  giriniz" name="IndirimOrani">
                        </div>



                        <button type="submit" class="btn btn-primary">Kaydet</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


