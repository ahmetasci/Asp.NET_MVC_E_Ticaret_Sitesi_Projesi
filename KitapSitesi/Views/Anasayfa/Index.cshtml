
@{
    ViewBag.Title = "Index";
}
@using KitapSitesi.Models;
@model List<Kitaplar>


<div class="row">
    <div class="col-md-12">

        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    İndirimli Kitaplar
                </div>
                <div class="block-controls">


                    <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                   

                </div>
            </div>
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                               

                                <th>Kitap Adı</th>
                                <th>Kategorisi</th>
                                <th>Satış Fiyatı </th>
                                <th>Alış Fiyatı </th>
                                <th>Yazarı</th>

                                <th>Yayınevi</th>
                                <th>Basım Yılı </th>
                                <th>Açıklama </th>
                                <th>Eklenme Tarihi </th>
                                <th>İndirim Oranı  </th>
                             
                               
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Kitaplar kitap in Model)
                            {
                                <tr>
                                    @if (kitap.IndirimOrani != 0)
                                    {
                                        <td> <span class="label label-info">@kitap.KitapAdi</span> </td>
                                        if (kitap.KategoriID == null)
                                        {
                                            <td></td>
                                        }
                                        else
                                        {
                                            <td>
                                                <span class="label label-primary">@kitap.Kategoriler.KategoriAdi</span>   @*Renklendirmeyi koyu mavi yaptık*@

                                            </td>
                                        }
                                        <td>@kitap.SatisFiyati</td>
                                        <td>@kitap.AlisFiyati</td>


                                        <td> <span class="label label-primary">@kitap.Yazarlar.YazarAdiSoyadi</span></td>

                                        <td>@kitap.YayinEvi.YayinEviAdi</td>
                                        <td>@kitap.BasimYili</td>
                                        <td>@kitap.Aciklama</td>
                                        <td>@kitap.EklenmeTarihi</td>
                                        <td>@kitap.IndirimOrani</td>
                                     
                                    }

                                   
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


